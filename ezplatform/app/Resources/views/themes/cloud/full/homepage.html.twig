{% extends '@ezdesign/pagelayout.html.twig' %}

{% block title %}
    Homepage
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col s12">

            <h1>{{ ez_render_field(content, 'name') }}</h1>
            {{ ez_render_field(content, 'description') }}


        </div>


    </div>
    <div class="row">


        {% for child in children.searchHits %}
            <div class="col m6">
                <div class="card">
                    <div class="card-image">
                        {{ ez_render_field(child.valueObject, 'shield') }}
                    </div>
                    <div class="card-content">
                        <h3>{{ ez_field_value(child.valueObject, 'name')}}</h3>

                        {{ ez_render_field(child.valueObject, 'description') }}
                    </div>
                    <div class="card-action">
                        <a href="/{{ ez_field_value(child.valueObject, 'name') |lower}}"> Ver Casa</a>
                    </div>
                </div>
            </div>


        {% endfor %}
    </div>
{% endblock %}