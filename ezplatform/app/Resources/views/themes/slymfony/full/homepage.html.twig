{% extends '@ezdesign/pagelayout.html.twig' %}

{% block title %}
    Homepage
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col s12">
            <h1>{{ ez_render_field(content, 'name') }}</h1>
            {{ ez_render_field(content, 'description') }}
            {{ ez_render_field(content, 'shield') }}
        </div>
    </div>

    <div class="row">
        {% for child in children.searchHits %}
            <div class="col m4">
                <div class="card">
                    <div class="card-image">
                        {{ ez_render_field(child.valueObject, 'photo') }}
                    </div>
                    <div class="card-content">
                        <h3>{{ ez_field_value(child.valueObject, 'name')}}</h3>
                        <h4>{{ ez_field_value(child.valueObject, 'nickname')}}</h4>

                        {{ ez_render_field(child.valueObject, 'biography') }}
                    </div>
                    <div class="card-action">
                        <a href="{{ url( 'ez_urlalias' , {contentId :child.valueObject.versionInfo.contentInfo.id}) }}"> Ver Miembro</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>


{% endblock %}